quick = 10
postsynchook = notmuch new

[Repository gmail-local]
type = Maildir
localfolders = ~/Mail/gmail/
nametrans = nt_local

[Repository gmail-remote]
type = Gmail
remoteuser = thomas.moulard@gmail.com
remotepasseval = mailpasswd("gmail")
realdelete = no
cert_fingerprint = <cert fingerprint>
nametrans = nt_remote

[mbnames]
enabled = yes
